base-button()
    @extend .btn
    @extend .btn-lg
    font-size: 14px
    padding: 7px 20px	

//https://github.com/bholloway/resolve-url-loader/issues/126
f-face(style-name, file, family, category) 
    filepath = "../assets/fonts/" + file
    @font-face 
        font-family: style-name
        src: url(filepath + ".eot")
        src: url(filepath + ".eot?#iefix") format('embedded-opentype'), url(filepath + ".woff") format('woff'), url(filepath + ".ttf")  format('truetype')
